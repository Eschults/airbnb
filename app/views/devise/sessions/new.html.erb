<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4 white-bg padding-btm-15 bord-rad-2 margin-top-20">

      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.input :email, label: :"Email" %>
        </div>

        <div class="field">
          <%= f.input :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.button :submit, value: "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
