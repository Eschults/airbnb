<div class="container">
  <div class="row">
    <div class="col-xs-12 white-bg bord-rad-2 margin-top-20">

      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <h1><%= @flat.title %></h1>
            <%= link_to "Réservez maintenant", new_flat_booking_path(@flat), class: "btn btn-primary" %>
          </div>
        </div>
        <br>
        <div class="row">
          <% @flat.photos.each do |photo| %>
            <div class="col-xs-4">
              <div class="img-thumbnail flat-picture">
                <%= image_tag photo.picture.url(:medium) %>
              </div>
            </div>
          <% end %>
        </div>
        <br>
        <br>
        <div class="row">
          <div class="col-xs-12">
            <% if @flat.address %>
              <p><strong>Location: </strong><%= @flat.address.city %></p>
            <% end %>
            <p><strong>Description: </strong><%= @flat.description %></p>
            <p><strong>Prix: </strong><%= @flat.price %><%= @flat.currency %> la nuitée pour 2 personnes.</p>
            <% if current_user == @flat.owner %>
            <p><%= link_to "Edit flat", edit_flat_path(@flat) %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
<br>
